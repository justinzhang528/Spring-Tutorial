<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util.xsd">

    <bean id="user" class="com.justin.spring6iocxml.User"></bean>
    <bean id="user2" class="com.justin.spring6iocxml.User"></bean>

    <!--通過constructor注入屬性-->
    <bean id="userDaoImpl" class="com.justin.spring6iocxml.UserDaoImpl">
        <constructor-arg name="name" value="justin_injected_by_setter"></constructor-arg>
        <constructor-arg name="age" value="26"></constructor-arg>
    </bean>

    <!--通過setter注入屬性-->
    <bean id="userDaoImpl2" class="com.justin.spring6iocxml.UserDaoImpl">
        <property name="name" value="justin_injected_by_setter"></property>
        <property name="age" value="18"></property>

        <!--set null to property-->
<!--        <property name="name">-->
<!--            <null></null>-->
<!--        </property>-->

        <!--set 特殊符號 to property-->
<!--        <property name="name" value="&lt;&gt;"></property>-->

        <!--使用CDATA[特殊符號] 設定 property-->
<!--        <property name="name">-->
<!--            <value><![CDATA[a < b]]></value>-->
<!--        </property>-->

    </bean>

    <bean id="employee" class="com.justin.spring6iocxml.comp.Employee">
        <constructor-arg name="name" value="justin_employee"></constructor-arg>
    </bean>

    <bean id="department" class="com.justin.spring6iocxml.comp.Department">
        <!--普通類型注入-->
        <constructor-arg name="name" value="IT_department"></constructor-arg>
        <!--使用ref完成物件類型注入(使用外部bean)-->
        <constructor-arg name="employee" ref="employee"></constructor-arg>
        <!--級聯方式注入-->
        <property name="employee.name" value="級聯方式給值"></property>
        <!--list方式注入-->
        <property name="list">
            <list>
                <value>名稱</value>
                <value>規則</value>
                <value>定義</value>
            </list>
        </property>
        <!--外部list方式注入-->
        <property name="nameList" ref="nameList"></property>
    </bean>

    <bean id="department2" class="com.justin.spring6iocxml.comp.Department">
        <!--普通類型注入-->
        <constructor-arg name="name" value="IT_department"></constructor-arg>
        <!--使用內部bean的方式進行物件類型注入-->
        <constructor-arg name="employee">
            <bean id="emp" class="com.justin.spring6iocxml.comp.Employee">
                <constructor-arg name="name" value="內部bean"></constructor-arg>
            </bean>
        </constructor-arg>
    </bean>

    <util:list id="nameList">
        <value>張三</value>
        <value>李四</value>
        <value>王八</value>
    </util:list>
</beans>