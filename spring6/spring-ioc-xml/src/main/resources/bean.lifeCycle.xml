<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="user" class="com.justin.spring6iocxml.lifeCycle.User"
          scope="singleton" init-method="initMethod" destroy-method="destroyMethod">
        <property name="name" value="lifeCycle_demonstration"></property>
    </bean>

    <!--bean的後置處理器要放入IOC容器才能生效，所以必須要定義-->
    <bean id="myBeanPost" class="com.justin.spring6iocxml.lifeCycle.MyBeanPost"></bean>
</beans>